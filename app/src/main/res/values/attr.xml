<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BorderGridView">
        <attr name="borderFlag">
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="verticalBorderColor" format="color" />
        <attr name="horizontalBorderColor" format="color" />
        <attr name="verticalBorderWidth" format="dimension" />
        <attr name="horizontalBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MarqueeView">
        <attr name="speed" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color|reference" />
        <attr name="txt_spacing" format="dimension" />
        <attr name="txt_radius" format="float" />
        <attr name="txt_dx" format="float" />
        <attr name="txt_dy" format="float" />
        <attr name="text_shadowColor" format="color|reference" />
    </declare-styleable>
</resources>