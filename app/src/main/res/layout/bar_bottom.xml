<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dd"
                android:layout_width="@dimen/bar_bot_img_size"
                android:layout_height="@dimen/bar_bot_img_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/bot_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="@string/index_home"
                android:textSize="@dimen/bar_bot_font_s" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dd2"
                android:layout_width="@dimen/bar_bot_img_size"
                android:layout_height="@dimen/bar_bot_img_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/bot_bet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd2"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:text="@string/index_lottery"
                android:textSize="@dimen/bar_bot_font_s" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/dd5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/shape_hollow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/dd5"
                android:gravity="bottom|center"
                android:padding="2dp"
                android:text="@string/index_match"
                android:textSize="@dimen/bar_bot_font_s" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dd3"
                android:layout_width="@dimen/bar_bot_img_size"
                android:layout_height="@dimen/bar_bot_img_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/bot_log" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/dd3"
                android:gravity="bottom|center"
                android:padding="2dp"
                android:text="@string/index_open"
                android:textSize="@dimen/bar_bot_font_s" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dd4"
                android:layout_width="@dimen/bar_bot_img_size"
                android:layout_height="@dimen/bar_bot_img_size"
                android:layout_centerInParent="true"
                android:src="@mipmap/bot_me" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/dd4"
                android:gravity="bottom|center"
                android:padding="2dp"
                android:text="@string/index_own"
                android:textSize="@dimen/bar_bot_font_s" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>